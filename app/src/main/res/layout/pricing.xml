<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where We Vedic Touch"
        android:padding="18dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the

      printing."
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:padding="10dp"
        android:gravity="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:padding="18dp"
        android:background="@drawable/cdcd_kam_stroke"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of Cities"
        android:padding="18dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:drawableBottom="@drawable/arrow_bottom"
        android:drawablePadding="10dp"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:textColor="#484646"/>



</LinearLayout>